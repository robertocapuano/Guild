    "version": "0.2.0",
    "configurations": [
        

        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:1234",
            "webRoot": "${workspaceFolder}",
            "breakOnLoad": true,
			"sourceMapPathOverrides": {
				"../*": "${webRoot}/*"
			},
            "sourceMaps": true,
            "runtimeExecutable": "/Users/roberto/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
        }
    ]
}